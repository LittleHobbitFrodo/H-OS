#!/usr/bin/fish

if test ! (basename (pwd)) = "H-OS"
	echo run in project root directory
	exit
end

if test -e ./qemu.log
  rm ./qemu.log
end

set _log 0
for i in $argv
  if test $i = "log"
    set _log 1
    break
  end
end

qemu-system-x86_64 -m 4G -drive file=H-OS.hdd,if=virtio,media=disk,discard=unmap,id=ahci_disk -device qemu-xhci -device usb-mouse -device nvme,serial=0
